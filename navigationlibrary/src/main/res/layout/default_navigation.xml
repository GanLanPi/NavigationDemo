<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_navigation_height"
    android:background="@color/color_navigation_background"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:padding="@dimen/dimen_navigation_leftpadding"
        android:src="@drawable/back" />



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="首页"
        android:textColor="@color/color_navigation_titleColor"
        android:textSize="@dimen/dimen_navigation_titleSize"

        />

    <TextView
        android:id="@+id/tv_menutext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="完成"
        android:textColor="@color/color_navigation_menuTextColor"
        android:textSize="@dimen/dimen_navigation_menuTextSize"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dimen_navigation_rigthpadding"
        android:visibility="gone"
        android:src="@drawable/menu"

        />






</RelativeLayout>